{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <div class="marginDivBlock">
        <div class="container">
            <div class="row g-3">
                {% for post in posts %}
                    <div class="col-md-6">
                        <a href="{{ path('app_blog_show', {'id': post.id, 'slug': post.slug}) }}"
                           class="linkPostCard">
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="{{ vich_uploader_asset(post) }}" class="img-fluid rounded-start"
                                             alt="{{ post.name }}">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ post.name }}</h5>
                                            <p class="card-text">{{ post.content|length > 50 ? post.content|striptags|slice(0, 50) ~ '...' : post.content | raw }}</p>
                                            <p class="card-text"><small class="text-body-secondary">Published
                                                    the {{ post.createdAt | date("d/m/Y") }}</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
