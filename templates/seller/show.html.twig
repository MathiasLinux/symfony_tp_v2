{% extends 'base.html.twig' %}

{% block title %}Seller{% endblock %}

{% block body %}
    <div class="aroundSeller">
        <h1>Seller</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seller.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ seller.title }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ seller.duration }}</td>
            </tr>
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('app_seller') }}">Back to list</a>
        <a class="btn btn-warning" href="{{ path('app_seller_edit', {'id': seller.id}) }}">Edit</a>
        <a class="btn btn-success" href="{{ path('app_seller_booking', {'id': seller.id}) }}">Take an appointment</a>

        {{ include('seller/_delete_form.html.twig') }}
    </div>
{% endblock %}
